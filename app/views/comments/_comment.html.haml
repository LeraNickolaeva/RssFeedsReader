%a.pull-left{:href=>"#"}
.media-body
  %h6.media-heading
  %i= comment.created_at.strftime('%b %d, %Y at %H:%M') 
  %p= simple_format comment.content
  .actions
    = link_to "Reply", new_polymorphic_path([@commentable, Comment.new], :parent_id => comment), class: 'btn btn-primary'
  = nested_comments comment.children